#!/bin/bash
#PBS -l nodes=1:ppn=8:dc2,walltime=0:05:00
#PBS -N biasfielcorr
#PBS -V

cd $PBS_O_WORKDIR
module load fsl

rm -f t1.nii.gz
rm -f finished

fslreorient2std $(jq -r .t1 config.json) t1.nii.gz


if [ -s t1.nii.gz ]
then 
     echo 0 > finished
else
	echo "Bias Correction Failed"
	echo 1 > finished
	exit 1
fi
